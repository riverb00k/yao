<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MemoaddFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/memoaddtextview"
            android:layout_width="270dp"
            android:layout_height="49dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:text="@string/bt_add"
            android:textSize="30sp"
            app:layout_constraintEnd_toStartOf="@+id/memobackbtn2"
            app:layout_constraintTop_toTopOf="@+id/memobackbtn2" />

        <Button
            android:id="@+id/memobackbtn2"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:background="?attr/actionModeCloseDrawable"
            android:hint="@string/kusuribtn_back"
            app:backgroundTint="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/memoedittext"
            android:layout_width="320dp"
            android:layout_height="400dp"
            android:layout_marginTop="12dp"
            android:ems="10"
            android:hint="@string/memotext_hint"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/memoaddtextview" />

        <Button
            android:id="@+id/memoaddbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/kusuribtn_register"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/memoedittext" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>